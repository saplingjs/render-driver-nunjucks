{
  "name": "@sapling/render-driver-nunjucks",
  "version": "0.1.0",
  "license": "MIT",
  "description": "Nunjucks driver for Sapling",
  "type": "module",
  "keywords": [
    "nunjucks",
    "sapling",
    "saplingjs",
    "templating",
    "driver"
  ],
  "homepage": "https://www.saplingjs.com",
  "bugs": "https://github.com/saplingjs/render-driver-nunjucks/issues",
  "author": {
    "name": "Oskari Groenroos",
    "email": "oskari@groenroos.fi",
    "url": "https://www.groenroos.fi"
  },
  "dependencies": {
    "nunjucks": "^3.2.3",
    "path": "^0.12.7"
  },
  "devDependencies": {
    "@babel/core": "^7.13.10",
    "@babel/eslint-parser": "^7.13.10",
    "ava": "^3.15.0",
    "husky": "^7.0.0",
    "lint-staged": "^12.0.2",
    "nyc": "^15.1.0",
    "xo": "^0.46.0"
  },
  "peerDependencies": {
    "@sapling/sapling": "^0.1.0"
  },
  "scripts": {
    "precommit": "lint-staged",
    "lint-fix": "xo --fix",
    "lint": "xo",
    "test": "nyc ava",
    "test:report": "nyc --reporter=lcov npm test",
    "test:send": "npx codecov"
  },
  "xo": {
    "ignores": [
      "node_modules/**/*.*",
      "test/**/*.*"
    ],
    "parser": "@babel/eslint-parser",
    "parserOptions": {
      "requireConfigFile": false
    },
    "rules": {
      "max-params": [
        "warn",
        {
          "max": 6
        }
      ],
      "no-multiple-empty-lines": [
        "error",
        {
          "max": 2
        }
      ],
      "no-await-in-loop": "off",
      "no-new": "off",
      "no-return-await": "off",
      "object-curly-spacing": [
        "error",
        "always"
      ],
      "unicorn/filename-case": [
        "error",
        {
          "cases": {
            "camelCase": true,
            "pascalCase": true
          }
        }
      ],
      "unicorn/numeric-separators-style": "off"
    }
  },
  "ava": {
    "files": [
      "test/**/*"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "!(*test).js": [
      "npm run lint"
    ]
  }
}
